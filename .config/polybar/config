format-prefix-underline = ${colors.bg}
format-prefix-margin-right = 1
format-prefix-margin-underline = ${colors.bg}

format-underline = ${colors.blue}
format-foreground = ${colors.fg}
format-background = ${colors.bg}

;======================================================================

[module/time]
