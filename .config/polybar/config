format-prefix-font = 2
format-prefix-margin-right = 1
format-prefix-foreground = ${colors.yellow}

format = <label>
format-background = ${colors.bg}
format-foreground = ${colors.fg}

label = %{A1:alacritty -e calcurse:}%date%%{A}
label-underline = ${colors.yellow}

date = %d-%m-%y

;======================================================================

[module/ewmh]
type = internal/xworkspaces

pin-workspaces = true

enable-click = true
enable-scroll = true

icon-0 = doc;
icon-1 = dev;
icon-2 = sys;
icon-3 = gaming;
icon-4 = www;
icon-5 = general;

format = <label-state>
format-background = ${colors.bg}
format-foreground = ${colors.fg}

label-active = %{F#CD5EBD}[%{F-}%name%%{F#CD5EBD}]%{F-}
label-active-margin-right = 1

label-urgent = %name%
label-urgent-padding = 2

label-empty = %name%
label-empty-margin-right = 1

;======================================================================

[module/kernel]
type = custom/script
exec = uname -r
tail = false
